@model RandomShop.Models.Order.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    var grandTotal = Model.SubTotal + (Model.OrderInfo?.ShippingPrice ?? 0m);
}

<h2 class="mb-4">Checkout</h2>

@if (!Model.CartItems.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <form asp-controller="Order" asp-action="PlaceOrder" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- LEFT: Cart + Shipping + Payment -->
            <div class="col-md-8">

                <!-- Cart Items -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Your Items</strong>
                    </div>
                    <div class="card-body p-0">
                        <table class="table mb-0 align-middle">
                            <thead>
                            <tr>
                                <th style="width:70px;">Image</th>
                                <th>Product</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>
                                        <img
                                            src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8cHJvZHVjdHxlbnwwfHwwfHx8MA%3D%3D"
                                            alt="Default Image"
                                            class="img-thumbnail"
                                            style="width:60px; height:60px; object-fit:cover;"/>
                                    </td>
                                    <td>
                                        <a asp-controller="Product"
                                           asp-action="Details"
                                           asp-route-id="@item.ProductItemId"
                                           class="text-decoration-none">
                                            @item.ProductName
                                        </a>
                                    </td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.TotalPrice.ToString("C")</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-end">
                        <strong>Subtotal: @Model.SubTotal.ToString("C")</strong>
                    </div>
                </div>

                <!-- Shipping Methods -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Shipping Method</strong>
                    </div>
                    <div class="card-body">
                        @if (Model.ShippingMethods != null && Model.ShippingMethods.Any())
                        {
                            @foreach (var method in Model.ShippingMethods)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input"
                                           type="radio"
                                           asp-for="SelectedShippingMethodId"
                                           value="@method.Id" required="required"
                                           checked="@(Model.SelectedShippingMethodId == null && method == Model.ShippingMethods.First() || Model.SelectedShippingMethodId == method.Id)"/>

                                    <label class="form-check-label">
                                        @method.Name
                                        @if (Model.OrderInfo != null && Model.OrderInfo.ShippingPrice == 0)
                                        {
                                            <span class="badge bg-success ms-2">FREE</span>
                                        }
                                    </label>
                                </div>
                            }

                            <span asp-validation-for="SelectedShippingMethodId" class="text-danger"></span>
                        }
                        else
                        {
                            <p>No shipping methods available.</p>
                        }
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Payment Method</strong>
                    </div>
                    <div class="card-body">
                        @if (Model.PaymentTypes != null && Model.PaymentTypes.Any())
                        {
                            @foreach (var payment in Model.PaymentTypes)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input"
                                           asp-for="SelectedPaymentTypeId"
                                           type="radio"
                                           name="SelectedPaymentTypeId"
                                           value="@payment.Id" required="required"/>
                                    <label class="form-check-label">
                                        @payment.Value
                                    </label>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No payment methods available.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- RIGHT: Address + Summary -->
            <div class="col-md-4">

                <!-- Address selection  -->
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Delivery Address</strong>
                    </div>
                    <div class="card-body">

                        <!-- Radio: Saved vs New address -->
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="UseNewAddress"
                                       value="false"
                                       checked="@(Model.UseNewAddress == false)"/>
                                <label class="form-check-label">
                                    Use saved address
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="UseNewAddress"
                                       value="true"
                                       checked="@(Model.UseNewAddress == true)"/>
                                <label class="form-check-label">
                                    Use new address
                                </label>
                            </div>
                        </div>

                        <!-- Saved addresses dropdown -->
                        <div id="savedAddressSection" style="display:@(Model.UseNewAddress ? "none" : "block")">
                            @if (Model.SavedAddresses != null && Model.SavedAddresses.Any())
                            {
                                <label class="form-label">Choose saved address:</label>
                                <select asp-for="SelectedAddressId"
                                        asp-items="@(new SelectList(Model.SavedAddresses, "AddressId", "DisplayText"))"
                                        class="form-select">
                                    <option value="">-- Select address --</option>
                                </select>
                                <span asp-validation-for="SelectedAddressId" class="text-danger"></span>
                            }
                            else
                            {
                                <p>No saved addresses found.</p>
                            }
                        </div>

                        <!-- New address form -->
                        <div id="newAddressSection" style="display:@(Model.UseNewAddress ? "block" : "none")"
                             class="mt-3">
                            <div class="mb-2">
                                <label class="form-label">Street number</label>
                                <input asp-for="Address.StreetNumber" name="AddressInputModel.StreetNumber"
                                       class="form-control new-address-input"/>
                                <span asp-validation-for="Address.StreetNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Address line 1</label>
                                <input asp-for="Address.AddressLine1" name="AddressInputModel.AddressLine1"
                                       class="form-control new-address-input"/>
                                <span asp-validation-for="Address.AddressLine1" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Address line 2 (optional)</label>
                                <input asp-for="Address.AddressLine2" name="AddressInputModel.AddressLine2"
                                       class="form-control"/>
                                <span asp-validation-for="Address.AddressLine2" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Postal code</label>
                                <input asp-for="Address.PostalCode" name="AddressInputModel.PostalCode"
                                       class="form-control new-address-input" required/>
                                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Country</label>
                                <select asp-for="CountryId" name="AddressInputModel.CountryId"
                                        asp-items="@(new SelectList(Model.Countries, "Id", "Name"))"
                                        class="form-select new-address-input">
                                    <option value="">-- Select country --</option>
                                </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>
                            <!--  Save shipping address checkbox  -->
                            <div class="form-check mb-3">
                                <input type="checkbox"
                                       name="SaveShippingAddress"
                                       id="SaveShippingAddress"
                                       class="form-check-input"
                                       value="true"/>
                                <input type="hidden"
                                       name="SaveShippingAddress"
                                       value="false"/>
                                <label class="form-check-label" for="SaveShippingAddress">
                                    Save this address to my address book
                                </label>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Order summary -->
                <div class="card">
                    <div class="card-header">
                        <strong>Order Summary</strong>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.SubTotal.ToString("C")</span>
                            <input asp-for="SubTotal" type="hidden" name="OrderTotal"/>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>
                                @if (Model.OrderInfo != null && Model.OrderInfo.ShippingPrice == 0)
                                {
                                    @:Free
                                }
                                else
                                {
                                    @(Model.OrderInfo?.ShippingPrice.ToString("C") ?? "-")
                                }
                            </span>
                        </div>
                        <hr/>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>@grandTotal.ToString("C")</strong>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" asp-action="PlaceOrder">
                            Place Order
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </form>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- 1. Get References ---
            const form = document.querySelector('form');
            const useNewAddressRadio = document.querySelector('input[name="UseNewAddress"][value="true"]');
            const radios = document.querySelectorAll('input[name="UseNewAddress"]');

            const savedAddressSelect = document.getElementById('SelectedAddressId'); // THE DROPDOWN
            const newAddressInputs = document.querySelectorAll('#newAddressSection .new-address-input'); // ALL NEW INPUTS

            // --- 2. Function to Control Requirements (The brain of the operation) ---
            function toggleAddressRequirements(useNew) {

                // A) Control New Address Inputs
                newAddressInputs.forEach(input => {
                    if (useNew) {
                        input.setAttribute('required', 'required'); // NEW: Required
                    } else {
                        input.removeAttribute('required'); // SAVED: Not Required
                        input.value = ''; // Clear for safety
                        input.classList.remove('is-invalid'); // Clear visual errors
                    }
                });

                // B) Control Saved Address Dropdown
                if (savedAddressSelect) { // Check if the dropdown exists on the page
                    if (useNew) {
                        savedAddressSelect.removeAttribute('required'); // NEW: Not Required
                        savedAddressSelect.value = ''; // Clear selection
                        savedAddressSelect.classList.remove('is-invalid');
                    } else {
                        savedAddressSelect.setAttribute('required', 'required'); // SAVED: Required
                    }
                }

                // Also toggle visibility for a complete user experience
                document.getElementById('savedAddressSection').style.display = useNew ? 'none' : 'block';
                document.getElementById('newAddressSection').style.display = useNew ? 'block' : 'none';
            }

            // --- 3. Attach Listeners ---

            // Run the function once when the page loads to set the initial state
            toggleAddressRequirements(useNewAddressRadio.checked);

            // Run the function whenever the radio button changes
            radios.forEach(r => {
                r.addEventListener('change', function () {
                    const useNew = this.value === 'true';
                    toggleAddressRequirements(useNew);
                });
            });

            // --- 4. Intercept Form Submission (The Security Guard) ---
            form.addEventListener('submit', function (event) {

                // This command checks ALL inputs that have the 'required' attribute currently set
                if (!form.checkValidity()) {

                    // !!! THE KEY STEP !!!
                    // Stop the request from going to the server
                    event.preventDefault();

                    // Tell Bootstrap to display the red validation messages for all failed fields
                    form.classList.add('was-validated');

                    // Focus on the first invalid field to guide the user
                    const firstInvalid = form.querySelector(':invalid');
                    if (firstInvalid) {
                        firstInvalid.focus();
                    }
                }
                // If it passes checkValidity(), the form continues and sends the HTTP request.
            });
        });
    </script>
}
