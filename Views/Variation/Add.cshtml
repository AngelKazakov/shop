@model VariationAddFormModel
@{
    ViewData["Title"] = "Add Variation";
}

<style>
    /* Form container styling */
    .form-container {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* Form group styling */
    .form-group {
        margin-bottom: 15px;
    }

    /* Form label styling */
    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    /* Input and dropdown styling */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Submit button styling */
    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Center heading */
    .header-container {
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<div class="header-container">
    <h1>Add New Variation</h1>
</div>

<div class="form-container">
    <form asp-action="Add" asp-controller="Variation" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name">Variation Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter variation name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Select Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="" selected disabled>-- Select Category --</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Variation</button>
    </form>
</div>
